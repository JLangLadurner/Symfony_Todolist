{% extends 'base.html.twig' %}

{% block body %}

<h2 class="page-header">Latest ToDos</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">ToDo</th>
      <th scope="col">Due Date</th>
      <th </th>
    </tr>
  </thead>
  <tbody>
  	{% for todo in todos %}
    <tr>
      <th scope="row">{{todo.id}}</th>
      <td>{{todo.name}}</td>
      <td>{{todo.dueDate|date('Y-m-d H:i:s')}}</td>
      <td>
      	<a href="/details/{{todo.id}}" class="btn btn-success">View</a>
      	<a href="/edit/{{todo.id}}" class="btn btn-default">edit</a>
      	<a href="/delete/{{todo.id}}" class="btn btn-danger">Delete</a>

      </td>
    </tr>
    {% endfor %}
    
  </tbody>
</table>

{% endblock %}